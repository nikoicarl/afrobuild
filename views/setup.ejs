<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Setup</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- include custom js here -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="assets/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .login-container {
            display: flex;
            height: 100vh;
        }

        .image-section {
            background: url('assets/img/login-img.png') no-repeat top center;
            background-size: cover;
            flex: 0.6;
            display: flex;
            align-items: end;
            justify-content: left;
            color: white;
            text-align: center;
            padding: 40px;
            border-radius: 0px 50px 50px 0px;
        }

        .login-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .login-box {
            width: 90%;
            max-width: 470px;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            background: white;
        }

        .form-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: auto;
            padding-top: 50px;
            width: 100%;
            max-width: 500px;
            position: absolute;
            bottom: 15px;
        }

        .hide {
            display: none;
        }
    </style>
</head>

<body>
    <div class="container-fluid login-container m-0 p-0">
        <div class="image-section text-light">
            <p>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
            </p>
        </div>
        <div class="login-section">
            <div class="login-box">
                <form>
                    <div class="personal-details-section signup_general">
                        <h3 class="text-center mt-4 mb-4">Business Details</h3>
                        <p>Provide us with basic information about business.</p>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <input type="text" class="form-control mt-3 mb-3" id="name" placeholder="Name"
                                    value="Afrobuild" disabled>
                            </div>
                        </div>
                        <div class="mt-4">
                            <input type="email" class="form-control mt-3 mb-4" id="email" placeholder="Email address"
                                required>
                        </div>
                        <div class=" mt-4">
                            <input type="tel" class="form-control mt-3 mb-3" id="mobile" placeholder="Mobile Number"
                                required>
                        </div>
                        <div class="row ">
                            <div class="col-md-6">
                                <select class="form-select mt-3 mb-3" id="country" required>
                                    <option value="" disabled selected>Country</option>
                                    <option value="">Loading...</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select class="form-select mt-3 mb-3" id="region" required>
                                    <option value="">Select Region</option>
                                    <option value="ashanti">Ashanti</option>
                                    <option value="brong-ahafo">Brong Ahafo</option>
                                    <option value="central">Central</option>
                                    <option value="eastern">Eastern</option>
                                    <option value="greater-accra">Greater Accra</option>
                                    <option value="northern">Northern</option>
                                    <option value="savannah">Savannah</option>
                                    <option value="upper-east">Upper East</option>
                                    <option value="upper-west">Upper West</option>
                                    <option value="volta">Volta</option>
                                    <option value="oti">Oti</option>
                                    <option value="western">Western</option>
                                    <option value="western-north">Western North</option>
                                    <option value="north-east">North East</option>
                                    <option value="ahafo">Ahafo</option>
                                    <option value="bono">Bono</option>
                                    <option value="bono-east">Bono East</option>
                                </select>

                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-offset-12">
                                <textarea class="form-control mt-3 mb-3" id="address" placeholder="Address" rows="2"
                                    required></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="container-fluid pt-5 pb-5">
                <div class=""
                    style="width: 100%; height: 100%; outline: 0.50px #A6A6A6 solid; outline-offset: -0.25px;"></div>
            </div>
            <div class="form-buttons mt-4 mb-4">
                <a href="login.html"> <button type="button"
                        class="btn  hide btn-outline-success afrobuild_signup_back_btn">&#8592; </button></a>
                <button type="submit" class="btn btn-success afrobuild_continue_btn">Submit</button>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    <script>
        const selectElement = document.getElementById('country');

        fetch('https://restcountries.com/v3.1/all')
            .then(response => response.json())
            .then(data => {
                // Sort countries by name
                const countries = data.sort((a, b) =>
                    a.name.common.localeCompare(b.name.common)
                );

                // Clear the default option
                selectElement.innerHTML = '<option value="">Select Country</option>';

                // Populate the select options
                countries.forEach(country => {
                    const option = document.createElement('option');
                    option.value = country.cca2; // ISO 3166-1 alpha-2 code
                    option.textContent = country.name.common;
                    selectElement.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error fetching countries:', error);
                selectElement.innerHTML = '<option value="">Failed to load countries</option>';
            });
    </script>
</body>

</html>